{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "g++.exe",
            "args": [
                "main.cpp",
                "Player.cpp",
                "Bullet.cpp",
                "Enemy.cpp",
                "-o",
                "main.exe",
                "-lraylib",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm",
                "-lws2_32",
                "-g",
                "-Wall"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true // Make this the default build task
            },
            "detail": "Task generated by Debugger."
        }
    ],
